<div class="text-center">
  <h1>ログイン</h1>
</div>

<div class="row">
  <div class="col-lg-6 offset-lg-3">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :user_name, 'ユーザーネーム' %>
        <%= f.text_field :user_name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <%= link_to "パスワードを忘れた方はこちら≫", new_password_reset_path %>
      <%= f.submit 'ログイン', class: 'btn btn-primary btn-block' %>
    <% end %>
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
      <%= f.hidden_field :user_name, value: 'test_user' %>
      <%= f.hidden_field :password, value: 'testlogin' %>
      <%= f.submit 'テストユーザーとしてログインして使ってみる', class: 'btn btn-info btn-block mt-3' %>
    <% end %>
  </div>
</div>
